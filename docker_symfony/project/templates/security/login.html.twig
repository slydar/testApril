{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Connexion</div>

                    <div class="card-body">
                        <form method="post">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Username'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Password'}}) }}
                            <button type="submit" class="btn btn-primary">Se connecter</button>
                        </form>
                        {% if error %}
                            <div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <p class="mt-3">Vous n'Ãªtes pas encore inscrit ? <a href="{{ path('app_register') }}">Inscrivez-vous ici</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}